@media (max-width:1600px)  {
    body {
        font-size: 90%;
        /* padding: 1%; */
    }
    aside {
        display: none;
    }

}

@media (max-width:1400px){
	#anime {
		display: none;
	}
	#dancing-doll{
		display: none;
	}
	#computer{
		display: none;
	}
}



